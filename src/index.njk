---
layout: base.njk
---

<main>
  <h1>{{metadata.title}}</h1>
  <p>{{metadata.description}}</p>
  {%if sites.length%}
    <ol class="site-list">
    {%for site in sites%}
      <li><a href="{{site.url}}">{{site.title}}</a></li>
    {%endfor%}
    </ol>
  {%else%}
    <p class="site-list">No sites yet.</p>
  {%endif%}
  <p>
    Found a broken link? Please <a href="{{metadata.issueLink}}">report it</a>.
  </p>
  <p>
    Want to add your site to the list? <a href="{{metadata.joinLink}}">Learn how</a>.
  </p>
</main>

<script src="/assets/index.js"></script>
